<?xml version='1.0' encoding='utf-8'?>
<widget id="com.acme.app" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>RPG: Regular Phitness Game</name>
    <icon density="mdpi" height="57" src="www/assets/chest.png" width="57" />
    <description>
        A basic fitness app that encourages me to go out and exercise!
    </description>
    <author email="bm5616@mcla.edu">
        Ben Michener
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <preference name="Orientation" value="portrait" />
</widget>
